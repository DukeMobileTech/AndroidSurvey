<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Survey" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="homeAsUpIndicator">@drawable/ic_menu_black_24dp</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_menu_black_24dp</item>
        <item name="android:textViewStyle">@style/TextView.Survey</item>
        <item name="android:checkboxStyle">@style/CheckBox.Survey</item>
        <item name="android:radioButtonStyle">@style/RadioButton.Survey</item>
        <item name="android:editTextStyle">@style/EditText.Survey</item>
        <item name="android:statusBarColor">@color/primary_variant</item>

        <!--Transitions-->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_left</item>
        <item name="android:windowExitTransition">@android:transition/slide_right</item>
    </style>
