<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Survey" parent="Theme.MaterialComponents.DayNight">
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>

        <item name="homeAsUpIndicator">@drawable/ic_menu_black_24dp</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_menu_black_24dp</item>
        <item name="android:textViewStyle">@style/TextView.Survey</item>
        <item name="android:checkboxStyle">@style/CheckBox.Survey</item>
        <item name="android:radioButtonStyle">@style/RadioButton.Survey</item>
        <item name="android:editTextStyle">@style/EditText.Survey</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
    </style>

    <style name="TextView.Survey" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="EditText.Survey" parent="android:Widget.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="CheckBox.Survey" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="RadioButton.Survey" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="SpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="SpinnerDropDownItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>
</resources>