<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/score_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/score_type"/>

    <TextView
        android:id="@+id/score_type_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"/>

    <TextView
        android:id="@+id/question_identifiers"
        android:layout_below="@+id/score_type_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/unit_questions"/>

    <TextView
        android:id="@+id/question_identifiers_value"
        android:layout_below="@+id/question_identifiers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"/>

    <TextView
        android:id="@+id/minimum_score"
        android:layout_below="@+id/question_identifiers_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/minimum_score"/>

    <TextView
        android:id="@+id/minimum_score_value"
        android:layout_below="@+id/question_identifiers_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"/>

    <TextView
        android:id="@+id/maximum_score"
        android:layout_below="@+id/minimum_score_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/maximum_score"/>

    <TextView
        android:id="@+id/maximum_score_value"
        android:layout_below="@+id/minimum_score_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"/>

    <TextView
        android:id="@+id/score_weight"
        android:layout_below="@+id/maximum_score_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/score_weight"/>

    <TextView
        android:id="@+id/score_weight_value"
        android:layout_below="@+id/maximum_score_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"/>

    <TextView
        android:id="@+id/unit_score"
        android:layout_below="@+id/score_weight_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/unit_raw_score"/>

    <TextView
        android:id="@+id/unit_score_value"
        android:layout_below="@+id/score_weight_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"/>

    <TextView
        android:id="@+id/weighted_score"
        android:layout_below="@+id/unit_score_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/weighted_score"/>

    <TextView
        android:id="@+id/weighted_score_value"
        android:layout_below="@+id/unit_score_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"/>

</RelativeLayout>