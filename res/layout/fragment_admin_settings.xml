<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp" >
    
    <ScrollView android:id="@+id/survey_fragment_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        
       <LinearLayout android:id="@+id/linear_layout_for_scroll_view" 
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
           <TextView
                android:id="@+id/sync_settings_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sync_settings"
                style="@style/sectionHeader" />
	
		    <TextView
		        android:id="@+id/device_identifier_label"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/device_identifier" />
		
		    <EditText
		        android:id="@+id/device_identifier_edit_text"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10" >
		
		        <requestFocus />
		    </EditText>
		    
		    <TextView
                android:id="@+id/device_label_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_label" />
        
            <EditText
                android:id="@+id/device_label_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" />
		
		    <TextView
		        android:id="@+id/sync_interval_label"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/sync_interval"
		        android:layout_marginTop="10dp" />
		
		    <EditText
		        android:id="@+id/sync_interval_edit_text"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:inputType="number" />
		    
		    <TextView
		        android:id="@+id/api_endpoint_label"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/api_endpoint"
                android:layout_marginTop="10dp" />
		
		    <EditText
		        android:id="@+id/api_endpoint_text"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:inputType="textUri"
		        android:ems="10" />
            
		    <TextView
                android:id="@+id/api_version_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/api_version"
                android:layout_marginTop="10dp" />
        
            <EditText
                android:id="@+id/api_version_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10" />
            
            <TextView
                android:id="@+id/project_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_id"
                android:layout_marginTop="10dp" />
        
            <EditText
                android:id="@+id/project_id_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10" />
         
            <TextView
                android:id="@+id/api_key_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/api_key"
                android:layout_marginTop="10dp" />
        
            <EditText
                android:id="@+id/api_key_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10" />
            
            <TextView
                android:id="@+id/custom_locale_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/custom_locale"
                android:layout_marginTop="10dp" />
               
            <EditText
                android:id="@+id/custom_locale_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" />
		    
		    <TextView
                android:id="@+id/feature_toggle_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature_toggle"
                android:layout_marginTop="30dp"
                style="@style/sectionHeader" />
		    
            <CheckBox android:id="@+id/show_surveys_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_surveys"
                android:layout_marginTop="5dp" />
            
            <CheckBox android:id="@+id/show_skip_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_skip"
                android:layout_marginTop="5dp" />
            
            <CheckBox android:id="@+id/show_na_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_na"
                android:layout_marginTop="5dp" />
            
             <CheckBox android:id="@+id/show_rf_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_rf"
                android:layout_marginTop="5dp" />
             
             <CheckBox android:id="@+id/show_dk_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_dk"
                android:layout_marginTop="5dp" />


             <TextView
                android:id="@+id/system_info_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/system_information"
                android:layout_marginTop="30dp"
                style="@style/sectionHeader" />
		    
		    <TextView
		        android:id="@+id/last_update_label"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/last_update"
		        android:layout_marginTop="5dp"
		        android:textStyle="bold" />
		    
		     <TextView
                android:id="@+id/version_code_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_code"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:textStyle="bold"
                 />
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="horizontal"
		        android:gravity="bottom|center_horizontal" >
		        
			    <Button
			        android:id="@+id/save_admin_settings_button"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/save_button"
			        android:layout_marginTop="18dp"
			        android:width="200dp"
			        android:layout_gravity="bottom" />
			    
		    </LinearLayout>
		</LinearLayout>
    </ScrollView>
</LinearLayout>
