<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Bottom Shadow -->
    <item>
        <shape  android:shape="rectangle">
            <solid android:color="@color/question_text_border" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    
    <!-- Top rectangle -->
    <item android:bottom="5px" >
        <shape  android:shape="rectangle">
            <solid android:color="@color/question_text_background" />
            <corners android:radius="10dp" />
            <stroke android:width="1px" android:color="@color/question_text_border"/>
        </shape>
    </item>

</layer-list>